<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="341dp"
        android:layout_height="255dp"
        android:layout_marginTop="16dp"

        android:text=""
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/img_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Tap to add Image"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp"
        android:backgroundTint="#F25749"
        app:layout_constraintBottom_toTopOf="@+id/find_text_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/choose_img_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="8dp"

        android:backgroundTint="#2196F3"
        android:text="Select Image"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/img_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/find_text_btn"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginBottom="28dp"
        android:text="Find Text"
        android:backgroundTint="#095F73"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="343dp"
        android:layout_height="243dp"
        app:layout_constraintEnd_toEndOf="@+id/sample_text"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/sample_text"
        app:layout_constraintTop_toBottomOf="@+id/sample_text"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="VectorDrawableCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>


